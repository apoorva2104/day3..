#include<stdio.h>
float sum(float x,float y);
void main()
{
    float x,y,add;
    printf("enter the numbers of float type:");
    scanf("%f%f",&x,&y);
    
    addition=sum(x,y);
    printf("addition is=%f",addition);
    
}

float sum(float x,float y)
{
    float result;
    result=x+y;
    return result;
}




5.

#include<stdio.h>
int compare(int a,int b);
void main()
{
    int a,b,largest;
    printf("enter two numbers:");
    scanf("%d%d",&a,&b);
    
    largest=compare(a,b);
    printf("largest=%d",largest);
    
}

int compare(int a,int b)
{
    if(a>b)
    return a;
    else
    return b;
}



6.

#include<stdio.h>
int compare(int a,int b,int c);
void main()
{
    int a,b,c,largest;
    printf("enter three numbers:");
    scanf("%d%d%d",&a,&b,&c);
    
    largest=compare(a,b,c);
    printf("largest=%d",largest);
    
}

int compare(int a,int b,int c)
{
    if(a>b && a>c)
    return a;
    if(b>a && b>c)
    return b;
    else
    return c;
}
