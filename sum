#include<stdio.h>
int input()
{
 int num1;
    printf("\n enter the number:");
    scanf("%d",&num1);
return num1;
 }

void display(int add)   
{
    printf("sum=%d",add);
    
}

int sum(int num1,int num2)
{
    int add;
    add=num1+num2;
    return add;
}

void main()
{ 
int num1,num2,add=0;
num1=input();
num2=input();
add(num1,num2);
display(add);
}




